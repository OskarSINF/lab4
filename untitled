#include <iostream>
#include <stdlib.h>
#include <math.h>
#include <vector>
#include <iterator>

using namespace std;

void zakres(int liczba);
vector<int> naCyfry(int liczba);
bool Czy_zero_jeden(int liczba);
int szukajK(int n);

void naSlowa(int liczba);
void naDziesiatki(int liczba,int d);
void naSetki(int liczba,int d);
void naTysiace(int liczba,int d);


//zmienne globalne:
string jednosci[]			={"zero ","jeden ","dwa ","trzy ","cztery ","piec ","szesc ","siedem ","osiem ","dziewiec "};
string wyjatkiPolanskiego[]	={"dziesiec ","jedenascie ","dwanascie ","trzynascie ","czternascie ","pietnascie ","szesnascie ","siedemanscie ","osiemnascie ","dziewietnascie "};
string dziesiatki[]			={"dziesiec ","dwadziescia ","trzydziesci ","czterdziesci ","piecdziesiat ","szescdziesiat ","siedemdziesiat ","osiemdziesiat ","dziewiecdziesiat ",};
string setki[]				={"sto ","dwiescie ","trzysta ","czterysta ","piecset ","szescset ","siedemset ","osiemset ","dziewiecset ",};
string tysiace[]			={"tysiac ","tysiace ","tysiecy "};

int main(int argc, char *argv[])
{
	int liczba=atoi(argv[1]);
	zakres(liczba);

	naSlowa(liczba);
	cout<<endl;

	naCyfry(liczba).clear();
}

void naSlowa(int liczba)
{

	switch(naCyfry(liczba).size())	
	{
		case 1:
		{ 
			cout<<jednosci[ naCyfry(liczba)[0] ];	
			break;
		}	
		case 2:
		{
			naDziesiatki(liczba,1);
			break;
		}
		case 3:
		{
			naSetki(liczba,2);
 			break;
 		}

 		case 4:
 		{
 			if(naCyfry(liczba)[3]!=1)
 				cout<<jednosci[naCyfry(liczba)[3]];
 			naTysiace(liczba,3);	
 			break;
 		}
 		case 5:
 		{
 			naDziesiatki(liczba,4);
  			naTysiace(liczba,4);
  			break;
 		}
 		case 6:
 		{
 			naSetki(liczba,5);
  			naTysiace(liczba,5);
  			break;
 		}
 		case 7:
 		{
 			cout<<"milion";
 			break;
 		}
 	}
 }

void naDziesiatki(int liczba,int d)
{
	if(naCyfry(liczba)[d]!=1&& naCyfry(liczba)[d-1]!=0) // np 21
	{
		cout<<dziesiatki[ naCyfry(liczba)[d]-1 ]<<jednosci[ naCyfry(liczba)[d-1] ];
	}
	else if(naCyfry(liczba)[d]!=1&& naCyfry(liczba)[d-1]==0) // np 20
	{
		cout<<dziesiatki[ naCyfry(liczba)[d]-1 ];
	}
	else if(naCyfry(liczba)[d]==1) // np 13
	{
		cout<<wyjatkiPolanskiego[ naCyfry(liczba)[d-1] ];
	}
}

void naSetki(int liczba,int d)
{
	cout<<setki[naCyfry(liczba)[d]-1];
 	
	if(naCyfry(liczba)[d-2]==0&& naCyfry(liczba)[d-1]==0);
	else if (naCyfry(liczba)[d-1]==0&& naCyfry(liczba)[d-2]!=0)
		cout<<jednosci[ naCyfry(liczba)[d-2] ];
	else 
		naDziesiatki(liczba,d-1);
 }

void naTysiace(int liczba,int d)
{
	if(naCyfry(liczba)[3]==1)
 		cout<<tysiace[0];
 	else if(naCyfry(liczba)[3]>1&& naCyfry(liczba)[3]<5)
		cout<<tysiace[1];
 	else 
 		cout<<tysiace[2];

	if(naCyfry(liczba)[d-1]!=0)
		naSetki(liczba,2);
	else if(naCyfry(liczba)[d-1]==0&& naCyfry(liczba)[d-2]!=0)
		naDziesiatki(liczba,1);
	else if(naCyfry(liczba)[d-1]==0&& naCyfry(liczba)[d-2]==0)
		cout<<jednosci[ naCyfry(liczba)[0] ];
}
//--------------------------------------------
void zakres(int liczba)
{
	if(liczba<0|| liczba>1000000)
	{
		cerr<<"Error! Liczba nie miesci sie w zakresie."<<endl;
		exit(0);
	}
}

vector<int> naCyfry(int liczba)
{
	vector<int> cyfry;
	int szerokosc; //liczby
	for(szerokosc=1;szerokosc<7;szerokosc++)
		if(liczba<pow(10,szerokosc))
			break;	

	for(int i=0;i<szerokosc;i++)
	{
		cyfry.push_back(liczba%10);
		liczba/=10;
	}
	return cyfry;
}

bool Czy_zero_jeden(int liczba)
{
	for(int i=0;i<naCyfry(liczba).size();i++)
		if(naCyfry(liczba)[i]!=0 && naCyfry(liczba)[i]!=1)
			return false;
		return true;
}

int szukajK(int n)
{
	int k=1;
		if(n%9==0)
		{
			cerr<<"Liczba k nie miesci siÄ™ w zakresie!"<<endl;	
			exit(0);
		}
		while(!Czy_zero_jeden(k*n))
			k++;
		return k;
}
